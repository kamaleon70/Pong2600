        lda FontBuf+0,x
        sta PF1		; set left score bitmap
        SLEEP 24
        lda FontBuf+5,x
        sta PF1		; set right score bitmap
        iny
        cpy #10
        bcc ScanLoop1a

        
	TIMER_SETUP 9
     
